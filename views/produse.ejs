
<html lang="en">

<%- include("./partials/head.ejs") %>

<body>
   
   <div class="container">
<div class="navbar">
    
    <%- include("./partials/nav.ejs") %>
    
    <img src="/geanta.jpg" width="30px" height="30px">
    
    </div>
   </div>
   <div class="row">
    <% if(produs.length == 0) { %>
        <h4 class= 'font-weight-light text-muted font-italic'> The list it's empty right now.</h4>
        <% } %>
<% for(var i = 0; i < produs.length; i++) { %>
    <div class="col-4">
        <div class="shop-items">
            <div class="shop-item">
                <a><span class="shop-item-title"><%= produs[i].title %></span></a>
                <a><img class="shop-item-image" src="/Pharmacy-background-2.jpg"></a>
                <div class="rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star-o"></i>
                </div>
                <div class="shop-item-details">
                    <span class="shop-item-price"><%= produs[i].price %></span>
                    <button class="btn btn-primary shop-item-button" type="button">ADĂUGAȚI ÎN COȘ</button>
                </div>
            </div>
        </div>
    </div>    
<% } %>                 
   </div>
   

</body>
</html>